
Private Sub saveEntrybtn_Click()

Dim ClassName As String
Dim day As String
Dim starTime As String
Dim endTime As String

Dim tempStart As String
Dim tempEnd As String
Dim colonIndexS As Integer
Dim colonIndexE As Integer
intRow = 2

ClassName = ClassNametxt.Value
day = ClassDayComboBox.Value
startTime = StartTimeComboBox.Value
endTime = EndTimeComboBox.Value
If (ClassName = "" Or day = "" Or startTime = "" Or endTime = "") Then
MsgBox "Please fill in all the required data before saving!", vbExclamation, "Warning!"

Else

Set WB = ThisWorkbook
Set ClassData = WB.Worksheets("Schedule Data")
  Do While (ClassData.Cells(intRow, "A") <> "")
       intRow = intRow + 1
    Loop
    
 ClassData.Cells(intRow, "A") = ClassName
  ClassData.Cells(intRow, "B") = day
 ClassData.Cells(intRow, "C") = startTime
 ClassData.Cells(intRow, "D") = endTime
 
MsgBox "Data has been saved.", vbInformation, "Saved!"

ClassNametxt.Value = ""
ClassDayComboBox.Value = ""
StartTimeComboBox.Value = ""
EndTimeComboBox.Value = ""

End If

End Sub


Private Sub UserForm_Click()

End Sub


Private Sub UserForm_Initialize()

    ' Initialize ClassDayComboBox
    ClassDayComboBox.Clear
    ClassDayComboBox.AddItem "Monday"
    ClassDayComboBox.AddItem "Tuseday"
    ClassDayComboBox.AddItem "Wednesday"
    ClassDayComboBox.AddItem "Thursday"
    ClassDayComboBox.AddItem "Friday"
    
    
     ' Initialize StartTimeComboBox
    StartTimeComboBox.Clear
    StartTimeComboBox.AddItem "8:00 am"
    StartTimeComboBox.AddItem "9:00 am"
    StartTimeComboBox.AddItem "10:00 am"
    StartTimeComboBox.AddItem "11:00 am"
    StartTimeComboBox.AddItem "12:00 pm"
    StartTimeComboBox.AddItem "1:00 pm"
    StartTimeComboBox.AddItem "2:00 pm"
    StartTimeComboBox.AddItem "3:00 pm"
    StartTimeComboBox.AddItem "4:00 pm"
    StartTimeComboBox.AddItem "5:00 pm"
    StartTimeComboBox.AddItem "6:00 pm"
    StartTimeComboBox.AddItem "7:00 pm"


 ' Initialize EndTimeComboBox
    EndTimeComboBox.Clear
    EndTimeComboBox.AddItem "9:00 am"
    EndTimeComboBox.AddItem "10:00 am"
    EndTimeComboBox.AddItem "11:00 am"
    EndTimeComboBox.AddItem "12:00 pm"
    EndTimeComboBox.AddItem "1:00 pm"
    EndTimeComboBox.AddItem "2:00 pm"
    EndTimeComboBox.AddItem "3:00 pm"
    EndTimeComboBox.AddItem "4:00 pm"
    EndTimeComboBox.AddItem "5:00 pm"
    EndTimeComboBox.AddItem "6:00 pm"
    EndTimeComboBox.AddItem "7:00 pm"
    EndTimeComboBox.AddItem "8:00 pm"
    EndTimeComboBox.AddItem "9:00 pm"
    EndTimeComboBox.AddItem "10:00 pm"




End Sub
